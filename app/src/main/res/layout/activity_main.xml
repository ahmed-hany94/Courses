<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkocean"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="@dimen/my_edit_text_width"
        android:layout_height="@dimen/my_edit_text_height"
        android:layout_marginBottom="@dimen/my_below_margin"
        android:background="@color/editTextBackgroundColor"
        android:drawableStart="@drawable/ic_action_user"
        android:hint="@string/email_hint_text"
        android:textColorHint="#ffffff"
        android:inputType="textEmailAddress"
        android:textColor="#B93B61"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/passwd_edit_text"
        android:layout_width="@dimen/my_edit_text_width"
        android:layout_height="@dimen/my_edit_text_height"
        android:layout_marginBottom="@dimen/my_below_margin"
        android:background="@color/editTextBackgroundColor"
        android:drawableStart="@drawable/ic_action_pass"
        android:hint="@string/passwd_hint_text"
        android:textColorHint="#ffffff"
        android:inputType="textPassword"
        android:textColor="#B93B61"
        android:textSize="18sp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_login"
        android:text="@string/login_btn_text"
        android:textSize="18sp" />


</LinearLayout>